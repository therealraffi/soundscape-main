<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ack">

    <ImageView
        android:id="@+id/filled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/miccy"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="223dp" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/circle" />
    <ImageView
        android:id="@+id/circle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/orb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/filled"
        android:tint="@color/first"/>

    <ImageView
        android:id="@+id/orb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/filled"
        android:tint="@color/second"/>

    <ImageView
        android:id="@+id/orb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/filled"
        android:tint="@color/third"/>

    <ImageView
        android:id="@+id/orb4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/filled"
        android:tint="@color/fourth"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:autoSizeTextType="uniform"
            android:background="@drawable/radius"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="DOG"
            android:textColor="@color/first"
            android:textSize="30dp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="100dp"
            app:autoSizeMinTextSize="20dp"
            app:autoSizeStepGranularity="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:autoSizeTextType="uniform"
            android:background="@drawable/radius"
            android:gravity="center"
            android:padding="7dp"
            android:text="DOG"
            android:textColor="@color/second"
            android:textSize="23dp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="100dp"
            app:autoSizeMinTextSize="20dp"
            app:autoSizeStepGranularity="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.143" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:autoSizeTextType="uniform"
            android:background="@drawable/radius"
            android:gravity="center"
            android:padding="7dp"
            android:text="DOG"
            android:textColor="@color/third"
            android:textSize="23dp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="100dp"
            app:autoSizeMinTextSize="20dp"
            app:autoSizeStepGranularity="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.814" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:autoSizeTextType="uniform"
            android:background="@drawable/radius"
            android:gravity="center"
            android:padding="20dp"
            android:text="Random"
            android:textColor="@color/fourth"
            android:textSize="23dp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="100dp"
            app:autoSizeMinTextSize="20dp"
            app:autoSizeStepGranularity="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.993" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>